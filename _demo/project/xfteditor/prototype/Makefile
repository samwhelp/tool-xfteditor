default: help
.PHONY: default

help:
	@echo 'Usage:'
	@echo '	$$ make [action]'
	@echo
	@echo 'Example:'
	@echo '	$$ make'
	@echo '	$$ make help'
	@echo
	@echo '	$$ make install'
	@echo
	@echo '	$$ make remove'
	@echo

.PHONY: help


install: install-xftt install-xfted install-xftvi install-xftvim install-xftnvim install-xftlvim install-xftmicro install-xftkak install-xftnano install-xftne install-xftemacs install-xftmced

.PHONY: install


remove: remove-xftt remove-xfted remove-xftvi remove-xftvim remove-xftnvim remove-xftlvim remove-xftmicro remove-xftkak remove-xftnano remove-xftne remove-xftemacs remove-xftmced

.PHONY: remove


install-xftt:
	make -C xftt install
.PHONY: install-xftt

remove-xftt:
	make -C xftt remove
.PHONY: remove-xftt


install-xfted:
	make -C xfted install
.PHONY: install-xfted

remove-xfted:
	make -C xfted remove
.PHONY: remove-xfted


